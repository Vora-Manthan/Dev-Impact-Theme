{%- style -%}
  .footer-custom {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    font-size: 14px;
    border-top: 1px solid transparent;
    margin-top: 10px;
    border-radius: 24px 24px 0 0;
    margin-inline: 10px;
  }

  .footer-custom a {
    text-decoration: none;
    transition: opacity 0.2s;
  }
  
  .footer-custom a:hover {
    opacity: 0.7;
  }

  .footer-custom__inner {
      display: flex;
      flex-direction: column;
      gap: 40px;
  }

  .footer-custom__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
  }

  @media screen and (min-width: 990px) {
    .footer-custom__grid {
      grid-template-columns: 1.3fr 1.2fr 1.5fr; 
      gap: 0;
    }
    
    .footer-custom__col {
      padding-left: 40px;
      padding-right: 40px;
      border-left: 1px dashed {{ section.settings.text_color | color_modify: 'alpha', 0.3 }};
    }
    
    .footer-custom__col:first-child {
      border-left: none;
      padding-left: 0;
    }
    
    .footer-custom__col:last-child {
      padding-right: 0;
    }
  }

  .footer-custom__col {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  /* Column 1 Specifics */
  .footer-custom__logo img {
    margin-bottom: 5px;
  }

  .footer-custom__tagline {
    font-weight: bold;
    margin-bottom: 10px;
    display: block;
    max-width: 300px;
  }

  .footer-dashed-line {
    border-top: 1px dashed {{ section.settings.text_color | color_modify: 'alpha', 0.3 }};
    width: 100%;
    margin: 10px 0;
    opacity: 0.5;
  }
  
  .footer-full-width-line {
      border-top: 1px dashed {{ section.settings.text_color | color_modify: 'alpha', 0.3 }};
      width: 100%;
      opacity: 0.5;
      margin: 0;
  }

  /* Newsletter */
  .footer-custom__newsletter-title {
    font-weight: 800;
    text-transform: uppercase;
    margin-bottom: 8px;
    display: block;
    font-size: 15px;
    letter-spacing: 0.5px;
  }

  .footer-custom__params {
    margin-bottom: 20px;
    line-height: 1.4;
    max-width: 350px;
  }

  .footer-custom__form {
    position: relative;
    max-width: 400px;
    width: 100%;
  }

  .footer-custom__input {
    width: 100%;
    border-radius: 50px;
    border: none;
    padding: 12px 20px;
    padding-right: 60px;
    color: #000;
    background: #fff;
    height: 50px;
  }
  
  .footer-custom__input:focus {
      outline: none;
      box-shadow: 0 0 0 2px rgba(0,0,0,0.1);
  }

  .footer-custom__submit {
    position: absolute;
    right: 5px;
    top: 50%;
    transform: translateY(-50%);
    background-color: #FFC043;
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: #000;
    transition: transform 0.2s;
  }
  
  .footer-custom__submit:hover {
      transform: translateY(-50%) scale(1.05);
  }

  /* Middle Column */
  .footer-custom__menus {
    display: flex;
    gap: 30px;
  }

  .footer-custom__menu-col {
    flex: 1;
  }

  .footer-custom__menu-title {
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 15px;
    display: block;
    font-size: 14px;
    letter-spacing: 0.5px;
  }

  .footer-custom__menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-custom__menu-list li {
    margin-bottom: 10px;
  }
  
  .footer-custom__social-row {
      display: flex;
      align-items: center;
      gap: 20px;
      margin-top: 10px;
  }

  .footer-custom__social-title {
       font-weight: 700; 
       font-size: 16px; 
  }

  .footer-custom__socials {
    display: flex;
    gap: 12px;
  }

  .social-icon-circle {
    background: #111;
    color: #fff;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s;
  }
  
  .social-icon-circle:hover {
      transform: scale(1.1);
  }
  
  .social-icon-circle svg {
      width: 16px;
      height: 16px;
      fill: currentColor;
  }


  /* Right Column */
  .footer-custom__manufactured {
    font-size: 13px;
    line-height: 1.6;
    max-width: 90%;
  }
  
  .footer-custom__manufactured-title {
    font-weight: 700;
    margin-bottom: 10px;
    font-size: 15px;
    display: block;
  }

  .footer-custom__avail-title {
      font-weight: 700;
      margin-bottom: 15px;
      display: block;
      font-size: 15px;
  }

  .footer-custom__marketplaces {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .marketplace-icon {
    width: 54px;
    height: 54px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 5px;
  }
  
  .marketplace-icon img {
      width: 100%;
      height: 100%;
      object-fit: contain;
  }

  /* Bottom Bar */
  .footer-custom__bottom-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 10px;
      font-size: 13px;
      flex-wrap: wrap;
      gap: 20px;
  }
  
  .footer-custom__policies {
    display: flex;
    gap: 25px;
    flex-wrap: wrap;
    justify-content: center;
    flex: 1;
  }
  
  .footer-custom__copyright {
      flex: 0 0 auto;
  }
  
  .footer-custom__made-by {
      flex: 0 0 auto;
      text-align: right;
  }
  
  @media screen and (max-width: 989px) {
      .footer-custom__grid {
          gap: 40px;
      }
      .footer-custom__col {
          border-left: none;
          padding: 0;
      }
      .footer-custom__social-row {
          flex-direction: column;
          align-items: flex-start;
          gap: 10px;
      }
      .footer-custom__bottom-bar {
          flex-direction: column;
          text-align: center;
          align-items: center;
      }
      .footer-custom__made-by {
          text-align: center;
      }
  }
  
  @media screen and (max-width: 600px) {
      .footer-custom__menus {
          gap: 40px;
      }
  }

{%- endstyle -%}

<div class="footer-custom">
  <div class="container">
     <div class="footer-custom__inner">
        <div class="footer-custom__grid">
        
        {%- comment -%} COLUMN 1: BRAND & NEWSLETTER {%- endcomment -%}
        <div class="footer-custom__col">
            {%- for block in section.blocks -%}
            {%- if block.type == 'brand_newsletter' -%}
                <div class="footer-custom__brand" {{ block.shopify_attributes }}>
                {%- if block.settings.logo != blank -%}
                    <div class="footer-custom__logo" style="width: {{ block.settings.logo_width }}px">
                    {{ block.settings.logo | image_url: width: block.settings.logo_width | image_tag: loading: 'lazy', style: 'width: 100%; height: auto;' }}
                    </div>
                {%- else -%}
                    <h2 class="h3">{{ shop.name }}</h2>
                {%- endif -%}
                
                {%- if block.settings.tagline != blank -%}
                    <span class="footer-custom__tagline">{{ block.settings.tagline }}</span>
                {%- endif -%}

                <div class="footer-dashed-line"></div>

                {%- if block.settings.newsletter_heading != blank -%}
                    <span class="footer-custom__newsletter-title">{{ block.settings.newsletter_heading }}</span>
                {%- endif -%}

                {%- if block.settings.newsletter_text != blank -%}
                    <div class="footer-custom__params">{{ block.settings.newsletter_text }}</div>
                {%- endif -%}

                {%- form 'customer', class: 'footer-custom__form' -%}
                    <input type="hidden" name="contact[tags]" value="newsletter">
                    <input type="email" name="contact[email]" class="footer-custom__input" placeholder="Enter your email" required>
                    <button type="submit" class="footer-custom__submit">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    </button>
                    {%- if form.posted_successfully? -%}
                    <p class="form-success" style="color: green; margin-top: 10px;">{{ 'general.newsletter.subscribed_successfully' | t }}</p>
                    {%- endif -%}
                {%- endform -%}
                </div>
            {%- endif -%}
            {%- endfor -%}
        </div>

        {%- comment -%} COLUMN 2: LINKS & SOCIALS {%- endcomment -%}
        <div class="footer-custom__col">
            {%- for block in section.blocks -%}
                {%- if block.type == 'nav_socials' -%}
                <div class="footer-custom__links-wrap h-full flex flex-col" {{ block.shopify_attributes }}>
                    <div class="footer-custom__menus">
                        <div class="footer-custom__menu-col">
                            <span class="footer-custom__menu-title">{{ block.settings.menu_1_title }}</span>
                            <ul class="footer-custom__menu-list">
                                {%- for link in block.settings.menu_1.links -%}
                                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                                {%- endfor -%}
                            </ul>
                        </div>
                        <div class="footer-custom__menu-col">
                            <span class="footer-custom__menu-title">{{ block.settings.menu_2_title }}</span>
                            <ul class="footer-custom__menu-list">
                                {%- for link in block.settings.menu_2.links -%}
                                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                                {%- endfor -%}
                            </ul>
                        </div>
                    </div>

                    <div style="flex-grow:1"></div>
                    <div class="footer-dashed-line" style="margin-top: 30px;"></div>
                    
                    <div class="footer-custom__social-row">
                        <span class="footer-custom__social-title">{{ block.settings.social_title }}</span>
                        <div class="footer-custom__socials">
                            {%- if settings.social_instagram != blank -%}
                                <a href="{{ settings.social_instagram }}" class="social-icon-circle">{% render 'icon' with 'instagram' %}</a>
                            {%- endif -%}
                            {%- if settings.social_facebook != blank -%}
                                <a href="{{ settings.social_facebook }}" class="social-icon-circle">{% render 'icon' with 'facebook' %}</a>
                            {%- endif -%}
                            {%- if settings.social_youtube != blank -%}
                                <a href="{{ settings.social_youtube }}" class="social-icon-circle">{% render 'icon' with 'youtube' %}</a>
                            {%- endif -%}
                            {%- if settings.social_twitter != blank -%}
                                <a href="{{ settings.social_twitter }}" class="social-icon-circle">{% render 'icon' with 'twitter' %}</a>
                            {%- endif -%}
                            {%- if settings.social_tiktok != blank -%}
                                <a href="{{ settings.social_tiktok }}" class="social-icon-circle">{% render 'icon' with 'tiktok' %}</a>
                            {%- endif -%}
                        </div>
                    </div>
                </div>
                {%- endif -%}
            {%- endfor -%}
        </div>

        {%- comment -%} COLUMN 3: INFO & MARKETPLACES {%- endcomment -%}
        <div class="footer-custom__col">
            {%- for block in section.blocks -%}
                {%- if block.type == 'info_marketplaces' -%}
                <div class="footer-custom__info-wrap h-full flex flex-col" {{ block.shopify_attributes }}>
                    <div class="footer-custom__manufactured">
                        <span class="footer-custom__manufactured-title">{{ block.settings.manufactured_title }}</span>
                        {{ block.settings.manufactured_text }}
                    </div>

                    <div style="flex-grow:1"></div>
                    <div class="footer-dashed-line" style="margin-top: 30px;"></div>

                    <div class="footer-custom__avail">
                        <span class="footer-custom__avail-title">{{ block.settings.available_title }}</span>
                        <div class="footer-custom__marketplaces">
                            {%- if block.settings.market_1 != blank -%}
                                <div class="marketplace-icon">{{ block.settings.market_1 | image_url: width: 80 | image_tag }}</div>
                            {%- endif -%}
                            {%- if block.settings.market_2 != blank -%}
                                <div class="marketplace-icon">{{ block.settings.market_2 | image_url: width: 80 | image_tag }}</div>
                            {%- endif -%}
                            {%- if block.settings.market_3 != blank -%}
                                <div class="marketplace-icon">{{ block.settings.market_3 | image_url: width: 80 | image_tag }}</div>
                            {%- endif -%}
                            {%- if block.settings.market_4 != blank -%}
                                <div class="marketplace-icon">{{ block.settings.market_4 | image_url: width: 80 | image_tag }}</div>
                            {%- endif -%}
                            {%- if block.settings.market_5 != blank -%}
                                <div class="marketplace-icon">{{ block.settings.market_5 | image_url: width: 80 | image_tag }}</div>
                            {%- endif -%}
                        </div>
                    </div>
                </div>
                {%- endif -%}
            {%- endfor -%}
        </div>

        </div>

        {%- comment -%} BOTTOM BAR BLOCK {%- endcomment -%}
        {%- assign bottom_bar_block = section.blocks | where: 'type', 'bottom_bar' | first -%}
        {%- if bottom_bar_block != blank -%}
            <div class="footer-full-width-line"></div>
            
            <div class="footer-custom__bottom-bar" {{ bottom_bar_block.shopify_attributes }}>
                 <div class="footer-custom__copyright">
                    &copy; Copyright, {{ shop.name }} {{ 'now' | date: "%Y" }}
                 </div>
                 
                 <div class="footer-custom__policies">
                      {%- for link in bottom_bar_block.settings.policies_menu.links -%}
                          <a href="{{ link.url }}">{{ link.title }}</a>
                      {%- endfor -%}
                 </div>
                 
                 <div class="footer-custom__made-by">
                      {{ bottom_bar_block.settings.made_by_text }}
                 </div>
            </div>
        {%- endif -%}
    </div>
  </div>
</div>

